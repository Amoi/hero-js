{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": ["index.js"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs|bower_components)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "opts": {
        "template": "node_modules/docdash",
        "encoding": "utf8",
        "destination": "docs/",
        "recurse": true,
        "verbose": true
    },
    "markdown": {
        "tags": ["Component", "benlv"],
        "hardwrap": true
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    }
}
